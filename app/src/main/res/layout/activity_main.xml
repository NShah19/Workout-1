<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kho.workout.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:textSize = "30sp"
        android:id="@+id/homePageText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Edit Workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editButton"
        android:background="@drawable/round_button"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/startButton"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage"/>

    <Button
        android:text="Workout Tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workoutButton"
        android:background="@drawable/round_button"
        android:layout_below="@+id/editButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/round_button"
        android:id="@+id/optionsButton"
        android:layout_below="@+id/workoutButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Start Workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:background="@drawable/round_button"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/homePageText"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher1"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/optionsButton"
        android:layout_alignParentStart="true" />
</RelativeLayout>
